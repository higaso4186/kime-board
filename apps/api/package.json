{
  "name": "@kimeboard/api",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev -p 3001",
    "dev:demo": "cross-env FIRESTORE_PROJECT_ID=demo-kimeboard FIRESTORE_EMULATOR_HOST=127.0.0.1:8080 DISABLE_CLOUD_TASKS=true next dev -p 3001",
    "build": "next build",
    "start": "next start -p ${PORT:-3000}",
    "lint": "echo \"(optional)\"",
    "typecheck": "tsc -p tsconfig.json --noEmit --incremental false",
    "demo:db": "firebase emulators:start --only firestore --project demo-kimeboard",
    "demo:seed": "cross-env FIRESTORE_PROJECT_ID=demo-kimeboard FIRESTORE_EMULATOR_HOST=127.0.0.1:8080 tsx scripts/seed-demo.ts",
    "demo": "concurrently \"npm:demo:db\" \"npm:dev:demo\""
  },
  "dependencies": {
    "@google-cloud/firestore": "^7.11.0",
    "@google-cloud/tasks": "^6.2.0",
    "next": "^15.1.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/react": "19.2.13",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "firebase-tools": "^14.20.0",
    "tsx": "^4.20.5",
    "typescript": "^5.6.3"
  }
}
